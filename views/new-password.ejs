<%- include('includes/head.ejs') %>

<main>
    <section class="vh-100">
        <div class="container py-2 h-100">
          <div class="row d-flex align-items-center justify-content-center h-100">
            
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

              <form method="POST" action="/new-password/<%= user.resetToken %>">
                <!-- New Password input -->
                <div class="form-outline mb-4">
                  <label class="form-label" for="newpassword">New Password</label>
                  <input type="password" id="newpassword" name="newpassword" class="form-control form-control-lg" />
                </div>
                <input type="hidden" name="userId" id="userId" value="<%= user._id %>" />
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-lg btn-block">Update Password</button>
                
              </form>
            </div>
          </div>
        </div>
      </section>
</main>

<%- include('includes/footer.ejs') %>